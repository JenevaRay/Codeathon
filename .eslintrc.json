{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier"],
  "root": true,
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module", 
      "allowImportExportEverywhere": true
    }
  }  

